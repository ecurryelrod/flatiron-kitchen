<%= form_for @recipe do |f| %>
    <% if @recipe.errors.any? %>
        <div id="error_explanation">
            <h2><%= pluralize(@recipe.errors.count, 'error') %> prohibited this recipe from being saved:</h2>
            <ul>
                <% @recipe.errors.full_messages.each do |msg| %>
                    <li><%= msg %></li>
                <% end %>
            </ul>
        </div>
    <% end %>

    <%= f.label :name %>
    <%= f.text_field :name %>
    <br><br>
    <%= f.label :name, "Select All Ingredients:" %>
    <br><br>
    <%= f.collection_check_boxes :ingredient_ids, Ingredient.all, :id, :name %>
    <br><br>
    <%= f.fields_for :ingredients, @recipe.ingredients.build do |ingredient_fields| %>
        <%= ingredient_fields.label :name, "Add a New Ingredient:" %>
        <%= ingredient_fields.text_field :name %>
        <%= ingredient_fields.label :quantity %>
        <%= ingredient_fields.text_field :quantity %>
    <% end %>
    <br><br>
    <%= f.submit %>
<% end %>